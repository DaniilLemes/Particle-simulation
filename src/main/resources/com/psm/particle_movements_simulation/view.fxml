            fx:controller="com.psm.particle_movements_simulation.controller.Controller">
    <!-- UI Components -->
    <Pane fx:id="particlePane" AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"/>
    <VBox fx:id="controlPane" styleClass="control-pane" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0">
        <Button fx:id="startButton" text="Start" styleClass="start-button"/>
    </VBox>
</AnchorPane>